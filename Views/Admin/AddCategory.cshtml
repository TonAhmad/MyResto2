
@model MyResto2.Controllers.Category

@{
    ViewBag.Title = "Add Category";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
}

<div class="card shadow">
    <div class="card-header bg-primary text-white">
        <h4>Add New Category</h4>
    </div>
    <div class="card-body">
        @using (Html.BeginForm("AddCategory", "Admin", FormMethod.Post, new { @class = "form" }))
        {
            @Html.AntiForgeryToken()
            
            <div class="form-group mb-3">
                @Html.LabelFor(model => model.categoryName, "Category Name", new { @class = "form-label" })
                @Html.TextBoxFor(model => model.categoryName, new { @class = "form-control", required = "required" })
                @Html.ValidationMessageFor(model => model.categoryName, "", new { @class = "text-danger" })
            </div>

            <div class="form-group d-flex justify-content-between">
                <a href="@Url.Action("ManageProducts", "Admin")" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Save
                </button>
            </div>
        }
    </div>
</div>

