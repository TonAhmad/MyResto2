
@model List<MyResto2.Controllers.Product>

@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Layout/HomeLayout.cshtml";
}

<!-- Hero Section -->
<div class="container-fluid p-0">
    <div class="bg-image" style="background-image: url('/ProductImages/hero-bg.jpg'); height: 400px; background-size: cover; background-position: center; position: relative;">
        <div style="position: absolute; top: 0; left: 0; right: 0; bottom: 0; background: rgba(0,0,0,0.5);">
            <div class="container h-100 d-flex flex-column justify-content-center text-white">
                <h1 class="display-4 fw-bold">Welcome to Food Haven</h1>
                <p class="lead">Discover delicious meals made with fresh ingredients</p>
                <a href="@Url.Action("Menu", "Cust")" class="btn btn-warning btn-lg mt-3 align-self-start">
                    <i class="fas fa-utensils me-2"></i> Explore Our Menu
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Welcome Section -->
<section class="container mt-5">
    <div class="welcome-section text-center">
        <h2 class="welcome-title">Selamat Datang di Food Haven</h2>
        <p class="welcome-text">Nikmati kelezatan makanan terbaik kami, dibuat dengan bahan berkualitas tinggi dan cita rasa yang tak terlupakan. Kami berkomitmen untuk menyajikan pengalaman kuliner terbaik untuk Anda.</p>
    </div>
</section>

<!-- Top Seller Section -->
<section class="container mt-5">
    <div class="top-seller-section">
        <h2 class="text-center section-title mb-5">Menu Favorit Pilihan Pelanggan</h2>
        <div class="row justify-content-center">
            @if (Model != null && Model.Any())
            {
                foreach (var product in Model.Take(3))
                {
                    <div class="col-md-4 mb-4">
                        <div class="card h-100 text-center">
                            <div class="position-relative">
                                <img src="@Url.Content(product.imagePath)" class="card-img-top" alt="@product.productName">
                                <div class="position-absolute top-0 start-0 bg-warning text-white px-3 py-1 rounded-end">
                                    <i class="fas fa-star me-1"></i> Favorit
                                </div>
                            </div>
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">@product.productName</h5>
                                <p class="card-text text-muted">@product.Category.categoryName</p>
                                <p class="card-text text-warning fw-bold">Rp @string.Format("{0:N0}", product.price)</p>
                                <a href="@Url.Action("Menu", "Cust")" class="btn btn-outline-warning mt-auto">
                                    <i class="fas fa-shopping-cart me-1"></i> Pesan Sekarang
                                </a>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</section>

<!-- Image Slider (Auto-Scrolling) -->
<div class="container mt-5">
    <h3 class="text-center section-title mb-4">Menu Kami</h3>
    <div class="scrolling-container">
        <div class="scrolling-wrapper">
            @if (Model != null && Model.Any())
            {
                foreach (var product in Model)
                {
                    <div class="scrolling-item">
                        <img src="@Url.Content(product.imagePath)" alt="@product.productName" class="scrolling-image">
                    </div>
                }
            }
        </div>
    </div>
</div>

<!-- Order Section -->
<section class="container mt-5 mb-5">
    <div class="row">
        <div class="col-md-8 mx-auto text-center p-5 bg-white rounded-3 shadow">
            <i class="fas fa-utensils fa-3x text-warning mb-3"></i>
            <h2 class="mb-3">Pesan Sekarang, Nikmati Kelezatannya!</h2>
            <p class="lead mb-4">Tak perlu antri! Pesan makanan favoritmu langsung dari web ini dan nikmati setiap gigitan lezatnya.</p>
            <a href="@Url.Action("Menu", "Cust")" class="btn btn-warning btn-lg">
                <i class="fas fa-shopping-cart me-2"></i> Order Sekarang
            </a>
        </div>
    </div>
</section>

