<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title - Food Haven</title>
    @RenderSection("head", required: false)
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="~/Content/CustStyle.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <link rel="icon" type="image/png" sizes="64x64" href="~/ProductImages/logo.png">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
    <div class="wrapper">
        <header class="header">
            <div class="container d-flex justify-content-between align-items-center">
                <h1 class="site-title">Food Haven</h1>
            </div>
        </header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light sticky-top">
            <div class="container">
                <a class="navbar-brand" href="@Url.Action("Home", "Cust")">🍔 Food Haven</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a href="@Url.Action("Home", "Cust")" class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Home" ? "active" : "")">
                                <i class="fas fa-home"></i> Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("Menu", "Cust")" class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Menu" ? "active" : "")">
                                <i class="fas fa-utensils"></i> Menu
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("Checkout", "Cust")" class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Checkout" ? "active" : "")">
                                <i class="fas fa-shopping-cart"></i> Cart
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <div class="content">
            @RenderBody()
        </div>
        <footer class="mt-5 py-3 bg-dark text-white">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 text-center text-md-start">
                        <h5>Food Haven</h5>
                        <p class="mb-0">Delicious food for every mood</p>
                    </div>
                    <div class="col-md-6 text-center text-md-end">
                        <p class="mb-0">&copy; @DateTime.Now.Year Food Haven. All Rights Reserved.</p>
                    </div>
                </div>
            </div>
        </footer>
    </div>
    
    @RenderSection("Scripts", required: false)
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/js/all.min.js"></script>
</body>
</html>