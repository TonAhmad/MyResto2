<!DOCTYPE html>

<html>
<head>
    <title>@ViewBag.Title - Cashier Panel</title>
    @RenderSection("head", required: false)
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/CashierStyle.css" rel="stylesheet">
    <link rel="stylesheet" href="Design/CashierStyle.css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="icon" type="image/png" sizes="64x64" href="/ProductImages/logo.png">
</head>
<body>

    <div class="d-flex">
        <!-- Sidebar -->
        <nav class="sidebar bg-dark text-white p-3">
            <h2 class="text-center">Cashier Panel</h2>
            <div class="text-center mb-3">
                <h5>
                    👤
                    <span class="text-warning">@ViewBag.Username</span>
                </h5>
            </div>
            <ul class="nav flex-column">
                <li class="nav-item">@Html.ActionLink("💳 Proses Pembayaran", "ProcessPayment", "Cashier", null, new { @class = "nav-link text-white" })</li>
                <li class="nav-item">@Html.ActionLink("🛍️ Detail Order", "TransactionDetails", "Cashier", null, new { @class = "nav-link text-white" })</li>
                <li class="nav-item">@Html.ActionLink("🚪 Logout", "Logout", "Login", null, new { @class = "nav-link text-danger" })</li>
            </ul>
        </nav>

        <!-- Main Content -->
        <div class="content p-4">
            @RenderBody()
        </div>
    </div>
    @RenderSection("Scripts", required: false)
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
